{
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "files": ["TypeScript declaration/global-fetch.d.ts"],
  // https://github.com/tsconfig/bases/blob/master/bases/recommended.json
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve" // required for tsconfig to be compatible with react
  }
}
